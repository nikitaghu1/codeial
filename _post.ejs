<li id="post-<%=post.id %>">
    <p>
         <% if(locals.user && locals.user.id==post.user.id){%>
               <small>
                     <a class="delete-post-button" href="/post/destroy/<%=post.id%>">Delete</a>
               </small>
        <% } %>
        <% if( post.post_img){%>
            <img src="<%= post.post_img%>" alt="no image">
            <p><%= post.content %></p>
           <p> <%= post.user.name %> </p>   
        <% }else{%>   
            <p><%= post.content %></p>
            <p> <%= post.user.name %> </p> 

        <%} %>
   </p>
   <div id="comment-container">
         <% if(locals.user){ %>
               <form action="/comments/create" id="comment-form" method="POST">
                     <textarea cols="4" rows="4" placeholder="Comment here...." name="post_comment"></textarea>
                     <input type="hidden" name="post" value="<%= post._id %>">
                     <input type="submit" value="comment">
               </form>
         <%}  %>

         <div id="post-comments-list">
               <ul id="post-comments-${post.id}">
                    

               </ul>

         </div>
         
         </div>
   </li>

   